{
  "name": "@banzaicloud/service-tools",
  "version": "3.0.1",
  "author": "Andras Toth",
  "license": "Apache-2.0",
  "description": "Node.js service tools for common use cases",
  "homepage": "https://github.com/banzaicloud/service-tools#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/banzaicloud/service-tools"
  },
  "keywords": [
    "kubernetes",
    "microservice",
    "koa",
    "middleware",
    "health",
    "check",
    "graceful",
    "logger",
    "prometheus",
    "metrics"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "test": "npm run lint && npm run unit-test",
    "unit-test": "jest",
    "fmt": "prettier --find-config-path --write '{src,examples}/**/*.{js,ts,json}' && npm run lint -- --fix",
    "lint": "tslint --project tsconfig.json",
    "precommit": "pretty-quick --staged && npm test",
    "prepush": "npm run build && npm test",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "http-errors": "1.7.3",
    "joi": "14.3.1",
    "lodash": "4.17.15",
    "pino": "5.13.5",
    "prom-client": "11.5.3"
  },
  "devDependencies": {
    "@types/express": "4.17.1",
    "@types/http-errors": "1.6.2",
    "@types/jest": "24.0.19",
    "@types/joi": "14.3.3",
    "@types/koa": "2.0.51",
    "@types/lodash": "4.14.144",
    "@types/node": "12.11.1",
    "@types/pino": "5.8.12",
    "@types/request-promise-native": "1.0.17",
    "express": "4.17.1",
    "husky": "3.0.9",
    "jest": "24.9.0",
    "jest-mock-console": "1.0.0",
    "koa": "2.10.0",
    "prettier": "1.18.2",
    "prettier-tslint": "0.4.2",
    "pretty-quick": "2.0.0",
    "request-promise-native": "1.0.7",
    "ts-jest": "24.1.0",
    "ts-node": "8.4.1",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.6.4"
  },
  "peerDependencies": {
    "koa": ">=2.5.2 < 3",
    "express": ">=4.16.3 < 5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": false
      }
    },
    "testMatch": [
      "**/?(*.)+(spec|test).(ts|js)",
      "**/__tests__/*.+(ts|js)"
    ],
    "resetMocks": true
  }
}
