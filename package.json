{
  "name": "@banzaicloud/service-tools",
  "version": "1.2.7",
  "author": "Andras Toth",
  "license": "Apache-2.0",
  "description": "Node.js service tools for common use cases",
  "homepage": "https://github.com/banzaicloud/node-service-tools#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/banzaicloud/node-service-tools"
  },
  "keywords": [
    "kubernetes",
    "microservice",
    "koa",
    "middleware",
    "health",
    "check",
    "graceful",
    "logger",
    "prometheus",
    "metrics"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "test": "npm run lint && npm run unit-test",
    "unit-test": "jest",
    "fmt": "prettier --find-config-path --write '{src,examples}/**/*.{js,ts,json}' && npm run lint -- --fix",
    "lint": "tslint --project tsconfig.json",
    "precommit": "pretty-quick --staged && npm test",
    "prepush": "npm run build && npm test",
    "prepublishOnly": "npm run build && npm run test"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@types/express": "4.16.0",
    "@types/http-errors": "1.6.1",
    "@types/jest": "23.3.11",
    "@types/joi": "14.0.1",
    "@types/koa": "2.0.48",
    "@types/lodash": "4.14.119",
    "@types/node": "10.12.18",
    "@types/pino": "5.20.0",
    "@types/request-promise-native": "1.0.15",
    "express": "4.16.4",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "jest-mock-console": "0.4.2",
    "koa": "2.6.2",
    "prettier": "1.15.3",
    "prettier-tslint": "0.4.1",
    "pretty-quick": "1.8.0",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.2"
  },
  "peerDependencies": {
    "koa": ">=2.5.2 < 3",
    "express": ">=4.16.3 < 5"
  },
  "dependencies": {
    "http-errors": "1.7.1",
    "joi": "14.3.1",
    "lodash": "4.17.11",
    "pino": "5.10.6",
    "prom-client": "11.2.1",
    "request-promise-native": "1.0.5"
  },
  "optionalDependencies": {
    "dotenv": "^6.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/?(*.)+(spec|test).(ts|js)",
      "**/__tests__/*.+(ts|js)"
    ],
    "resetMocks": true
  }
}
